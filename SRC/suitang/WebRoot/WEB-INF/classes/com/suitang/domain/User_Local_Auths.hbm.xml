<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.suitang.domain.User_Local_Auths" table="user_local_auths">
		<id name="uid" type="int" column="uid">
			<generator class="increment"></generator>
		</id>
		<property name="password" type="string" column="password"></property>
		<property name="phone_no" type="string" column="phone_no"></property>
		<property name="email" type="string" column="email"></property>
	</class>
</hibernate-mapping>